<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Главная{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body data-turbo="false">
        <div class="page-content">
            <header class="page-header">
                <a href="{{ path('app_index') }}" class="page-title">
                    <img src="{{ asset('img/pen.svg') }}" alt="pen">
                    <h4>УЧЕТ ПЕРСОНАЛА</h4>
                </a>
                <div class="page-navbar">
                    <a class="navbar-item" href="{{ path('app_department_index') }}">Отделы</a>
                    <a class="navbar-item" href="{{ path('app_employee_index') }}">Персонал</a>
                    <a class="navbar-item" href="{{ path('app_contract_index') }}">Договоры</a>
                    <a class="navbar-item" href="{{ path('app_job_title_index') }}">Должности</a>
                    <a class="navbar-item" href="{{ path('app_job_responsibility_index') }}">Обязанности</a>
                    <a class="navbar-item" href="{{ path('app_days_off_index') }}">Отгулы</a>
                    <a class="navbar-item" href="{{ path('app_settings_index') }}">Прочие</a>
                </div>
            </header>
            <div class="page-body">
                {% block body %}{% endblock %}
            </div>
        </div>
    </body>
</html>
