{% extends 'base.html.twig' %}

{% block title %}Должности{% endblock %}

{% block body %}
    <div class="page-header-with-btns">
        <h4>Должности</h4>
        <a href="{{ path('app_job_title_new') }}" class="page-btn">Добавить</a>
    </div>
    <div class="cards-table">
        {% for job_title in job_titles %}
            <div class="entity-card with-btns">
                <div class="entity-card-body">
                    <h4>{{ job_title.id }}. {{ job_title.name }}</h4>
                    <p>{{ job_title.truncatedDescription }}</p>
                    <p>Зарплата: {{ job_title.salary }} ₽</p>
                </div>
                <div class="entity-card-btns">
                    <a href="{{ path('app_job_title_show', {id: job_title.id}) }}" class="icon-btn-s"><img src="{{ asset('img/link.svg') }}" alt="link"></a>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
